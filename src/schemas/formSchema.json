  "state": {
    "type": "select",
    "label": "State",
    "placeholder": "State",
    "values": {
      "Select": 1,
      "Karnataka": 2,
      "Andhra Pradesh": 3,
      "Telangana": 4,
      "Kerala": 5,
      "Maharashtra": 6,
      "Gujarat": 7,
      "Tamil Nadu": 8
    },
    "rules": {
      "required": true
    }
  },
  "countrycode": {
    "type": "select",
    "label": "CountryCode",
    "values": {
      "Tamil": 1,
      "English": 2
    },
    "default": 2,
    "rules": {
      "required": false
    }
  },
  "mobileno": {
    "type": "input_text",

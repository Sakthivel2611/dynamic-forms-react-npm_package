{
  "first_name": {
    "type": "input_text",
    "label": "First Name",
    "placeholder": "First Name",
    "rules": {
      "required": true,
      "min": 3,
      "max": 30,
      "datatype": "string"
    },
    "lang": {
      "hindi": {
        "label": "संतोष",
        "placeholder": "संतोष"
      },
      "malayalam": {
        "label": "പേരിന്റെ അവസാന ഭാഗം",
        "placeholder": "പേരിന്റെ അവസാന ഭാഗം"
      }
    }
  },
  "last_name": {
    "type": "input_text",
    "label": "Last Name",
    "placeholder": "Last Name",
    "rules": {
      "required": true,
      "min": 3,
      "max": 30,
      "datatype": "string"
    }
  },
  "gender": {
    "label": "Gender/Sex",
    "type": "input_radio",
    "values": {
      "male": 1,
      "female": 2,
      "other": 3
    },
    "default": 0,
    "rules": {
      "required": true
    }
  },
  "mothertongue": {
    "type": "select",
    "label": "Mother Tongue",
    "values": {
      "select": 1,
      "English": 2,
      "Tamil": 3,
      "Telugu": 4,
      "Kannada": 5,
      "Malayalam": 6
    },
    "default": 2,
    "rules": {
      "required": false
    }
  },
  "dateofbirth": {
    "type": "input_text",
    "label": "Date of Birth",
    "placeholder": "Date of Birth",
    "rules": {
      "required": true,
      "datatype": "date"
    },
    "minyear": 3,
    "format": "dd-mm-YYYY"
  },
  "address_line_1": {
    "type": "input_textarea",
    "label": "Address Line 1",
    "placeholder": "Address Line 1",
    "rules": {
      "required": true,
      "min": 3,
      "max": 30,
      "datatype": "string_numeric_back_slash_comma"
    }
  },
  "address_line_2": {
    "type": "string",
    "label": "Address Line 2",
    "placeholder": "Enter your address",
    "rules": {
      "required": false,
      "datatype": "string"
    }
  },
  "city": {
    "type": "input_text",
    "label": "City",
    "placeholder": "City",
    "rules": {
      "required": true,
      "min": 3,
      "max": 30,
      "datatype": "string_numeric"
    }
